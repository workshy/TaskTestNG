<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Arithmetic" parallel="methods" thread-count="100">
    <listeners>
        <listener class-name="listeners.ListenerClass"/>
    </listeners>
    <test name="Test Arithmetic Operations">
        <groups>
            <run>
                <exclude name="exception"/>
            </run>
        </groups>
        <classes>
            <class name="testClass.TestOfArithmeticMethodsForTypeLong"></class>
            <class name="testClass.TestOfArithmeticMethodsForTypeDouble"></class>
        </classes>
    </test>

</suite>